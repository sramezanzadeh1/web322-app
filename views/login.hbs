{{#if errorMessage}}
<div class="alert alert-danger">
    <strong>Error:</strong> {{errorMessage}}
</div>
{{/if}}

<form action="/login" method="POST" style="margin-top: 50px;">
    <div class="form-group">
        <input type="text" class="form-control" name="userName" placeholder="User Name" value="{{userName}}" required style="margin-top: 20px;">
    </div>
    <div class="form-group">
        <input type="password" class="form-control" name="password" placeholder="Password" required style="margin-top: 20px;">
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

